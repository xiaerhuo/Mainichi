{
  "name": "mainichi",
  "version": "1.0.0-beta.2",
  "description": "小程序UI组件库",
  "main": "index.js",
  "scripts": {
    "dev": "node config/webpack.config.dev.js",
    "lint": "eslint ./components --ext .js && stylelint \"components/**/*.less\" --fix",
    "build": "yarn && npx gulp -f config/compiler.js buildDist",
    "release": "sh config/release.sh"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaerhuo/tutu.git"
  },
  "author": "lix",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xiaerhuo/tutu/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint",
      "git add"
    ],
    "*.{css,less}": [
      "stylelint",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "homepage": "https://github.com/xiaerhuo/tutu#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-insert": "^0.5.0",
    "gulp-less": "^4.0.1",
    "gulp-rename": "^1.4.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "stylelint": "^11.1.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.41.2"
  }
}
